<div id="experiment-jumbo" class="jumbotron">
      <div class="container">
        <h1 class="display-3"><%= @proposal.title %></h1>
        <p>
        	<h2><p><%= @proposal.summary %></p></h2>
        </p>
      </div>
    </div>
    <a href="#" data-toggle="modal" data-target="#proposal-modal">Add Commment</a>

<div class="modal fade" id="proposal-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    	  <div class="modal-dialog">
				<div class="loginmodal-container">
					<h1>Submit a New Proposal</h1><br>

			<%=form_for :comment, url: '/comments' do |f|%>
				<%= f.label :body %>:
  				<%= f.text_field :body
  				 %><br>
  				 <%=f.hidden_field :commentable_id, :value => @proposal.id%>
  				 <%=f.hidden_field :commentable_type, :value => 'Proposal'%>

  				<%= f.submit %>
  			<%end%>
					
				  <div class="login-help">
					<a href="#">Register</a> - <a href="#">Forgot Password</a>
				  </div>
				</div>
			</div>
		  </div>

	<p><%= @proposal.hypothesis %></p>
	<p><%= @proposal.status %></p>

<h2>Comments:</h2>
	<% if @comments.empty? %>
		<p>No comments added</p>
	<% else %>
		<ul>
			<% @comments.each do |comment| %>
	    	<li><%= comment.body %></li>
	 	 <% end %>
	 	 <ul>
	<% end %>
	 

<h2>Experiments:</h2>
	<% if @experiments.empty? %>
		<p>No experiments added</p>
	<% else %>
		<ul>
			<% @experiments.each do |experiment| %>
		    <li><%= experiment.title %></li>
		    <li><%= link_to 'Show', proposal_experiment_url(@proposal, experiment) %></li>
		  <% end %>
 		</ul>
 	<% end %>

